<a class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-white hover:text-gray-200 hover:border-orange-500"
   href="{{ href }}" rel="previous" aria-label="{{ direction | capitalize }}">
    {% if direction == 'previous' %}
        <svg class="mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
             fill="currentColor">
            <path fill-rule="evenodd"
                  d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
                  clip-rule="evenodd"></path>
        </svg>
    {% endif %}

    {{ direction | capitalize }}

    {% if direction == 'next' %}
        <svg class="ml-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
             fill="currentColor">
            <path fill-rule="evenodd"
                  d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
        </svg>
    {% endif %}
</a>