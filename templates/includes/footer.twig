<footer class="bg-gray-900 align-bottom" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Footer</h2>
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
        <div class="xl:grid xl:grid-cols-3 xl:gap-8">
            <div class="space-y-8 xl:col-span-1">
                <a href="{{ siteUrl }}">
                    <img class="h-12" src="{{ alias('@assetBaseUrl/images/branding/logo.svg') }}" alt="Phoenix Logo">
                </a>
                <p class="text-gray-300 text-base">
                    We believe in forward thinking, and strive to put our members first!
                </p>
                {% cache globally %}
                    <div class="flex space-x-6 text-xl">
                        {% if siteInformation.discordInvite is not null %}
                            <a href="{{ siteInformation.discordInvite }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Discord</span>
                                <i class="fab fa-discord"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.twitterUsername is not null %}
                            <a href="https://twitter.com/{{ siteInformation.twitterUsername }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Twitter</span>
                                <i class="fab fa-twitter"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.twitchUsername is not null %}
                            <a href="https://twitch.tv/{{ siteInformation.twitchUsername }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Twitch</span>
                                <i class="fab fa-twitch"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.instagramUsername is not null %}
                            <a href="https://instagram.com/{{ siteInformation.instagramUsername }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Instagram</span>
                                <i class="fab fa-instagram"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.facebookUsername is not null %}
                            <a href="https://facebook.com/{{ siteInformation.facebookUsername }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Facebook</span>
                                <i class="fab fa-facebook"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.steamGroup is not null %}
                            <a href="https://steamcommunity.com/groups/{{ siteInformation.steamGroup }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">Steam</span>
                                <i class="fab fa-steam"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.githubUsername is not null %}
                            <a href="https://github.com/{{ siteInformation.githubUsername }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">GitHub</span>
                                <i class="fab fa-github"></i>
                            </a>
                        {% endif %}

                        {% if siteInformation.truckersmpVtcId is not null %}
                            <a href="https://truckersmp.com/vtc/{{ siteInformation.truckersmpVtcId }}" target="_blank"
                               class="text-gray-400 hover:text-gray-500">
                                <span class="sr-only">TruckersMP</span>
                                <i class="fas fa-truck"></i>
                            </a>
                        {% endif %}
                    </div>
                {% endcache %}
            </div>
            <div class="mt-12 grid grid-cols-2 gap-8 xl:mt-0 xl:col-span-2">
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
                            Phoenix
                        </h3>
                        <ul class="mt-4 space-y-4">
                            <li>
                                <a href="{{ url('about-us') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    About Us
                                </a>
                            </li>

                            <li>
                                <a href="https://events.phoenixvtc.com"
                                   class="text-base text-gray-300 hover:text-white">
                                    Phoenix Events
                                </a>
                            </li>

                            <li>
                                <a href="{{ url('about-us/our-fleet') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Our Fleet
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="mt-12 md:mt-0">
                        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
                            Information
                        </h3>
                        <ul class="mt-4 space-y-4">
                            <li>
                                <a href="{{ url('contact') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Contact
                                </a>
                            </li>

                            <li>
                                <a href="mailto:hr@phoenixvtc.com"
                                   class="text-base text-gray-300 hover:text-white">
                                    Report a Driver
                                </a>
                            </li>

                            <li>
                                <a href="mailto:events@phoenixvtc.com" class="text-base text-gray-300 hover:text-white">
                                    Event Invitations
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
                            Company
                        </h3>
                        <ul class="mt-4 space-y-4">
                            <li>
                                <a href="{{ url('about-us/brand-guidelines') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Brand Guidelines
                                </a>
                            </li>

                            <li>
                                <a href="{{ url('careers') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Careers
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="mt-12 md:mt-0">
                        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
                            Legal
                        </h3>
                        <ul class="mt-4 space-y-4">
                            <li>
                                <a href="{{ url('rules') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Rules
                                </a>
                            </li>

                            <li>
                                <a href="{{ url('privacy-policy') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Privacy
                                </a>
                            </li>

                            <li>
                                <a href="{{ url('terms-and-conditions') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Terms
                                </a>
                            </li>

                            <li>
                                <a href="{{ url('cookie-policy') }}"
                                   class="text-base text-gray-300 hover:text-white">
                                    Cookies
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-12 border-t border-gray-200 pt-8">
            <p class="text-base text-gray-400 xl:text-center">
                &copy; 2020 - 2021 PhoenixVTC. All rights reserved.
            </p>
        </div>
    </div>
</footer>

