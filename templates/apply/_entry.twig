{% do eagerLoadElements(entry, [
    'requirements',
    'faqItems',
]) %}

{% extends "_layout.twig" %}

{% block content %}
    {% include '_partials/navbar/navbar.twig' %}

    {% include 'includes/header.twig' with {
        'tag': 'Join Phoenix',
        'title': 'What are you waiting for?',
        'description': 'Applying only takes 10 minutes! And if you choose to join us, you\'re sure to enjoy your time here greatly.'
    } %}

    <div class="bg-gray-900 overflow-hidden">
        <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
            <div class="hidden lg:block bg-orange-700 absolute top-0 bottom-0 left-3/4 w-screen"></div>
            <div class="mx-auto text-base max-w-prose lg:grid lg:grid-cols-2 lg:gap-8 lg:max-w-none">
                <div>
                    <h2 class="text-base text-orange-600 font-semibold tracking-wide uppercase">
                        Applicant Requirements
                    </h2>
                    <h3 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl">
                        Are you the perfect match?
                    </h3>
                </div>
            </div>
            <div class="mt-8 lg:grid lg:grid-cols-2 lg:gap-8">
                <div class="relative lg:row-start-1 lg:col-start-2">
                    <svg class="hidden lg:block absolute top-0 right-0 -mt-20 -mr-20" width="404" height="384"
                         fill="none" viewBox="0 0 404 384" aria-hidden="true">
                        <defs>
                            <pattern id="de316486-4a29-4312-bdfc-fbce2132a2c1" x="0" y="0" width="20" height="20"
                                     patternUnits="userSpaceOnUse">
                                <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor"/>
                            </pattern>
                        </defs>
                        <rect width="404" height="384" fill="url(#de316486-4a29-4312-bdfc-fbce2132a2c1)"/>
                    </svg>
                    <div class="relative text-base mx-auto max-w-prose lg:max-w-none">
                        <figure>
                            <div class="aspect-w-12 aspect-h-7 lg:aspect-none">
                                {% set truckWithGoldenGateBridge = craft.imager.transformImage(alias('@assetBaseUrl/images/game-media/truck_with_golden_gate_bridge.png'), {
                                    format: 'webp',
                                    width: 592,
                                    height: 333,
                                }) %}
                                <img class="rounded-lg shadow-lg object-cover object-center"
                                     width="592" height="333"
                                     src="{{ truckWithGoldenGateBridge }}"
                                     alt="Phoenix truck in front of the Golden Gate Bridge">
                            </div>
                            <figcaption class="mt-3 flex text-sm text-gray-400">
                                <!-- Heroicon name: solid/camera -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="flex-none w-5 h-5 text-gray-400"
                                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <span class="ml-2">Golden Gate Bridge, San Francisco</span>
                            </figcaption>
                        </figure>
                    </div>
                </div>
                <div class="mt-8 lg:mt-0">
                    <div class="text-base max-w-prose mx-auto lg:max-w-none">
                        <p class="text-lg text-gray-400">
                            In order to ensure that the Phoenix Family only consists of the best drivers, we have some
                            basic requirements. We do not make any exceptions to these requirements.
                        </p>
                    </div>
                    <div class="mt-5 prose prose-orange text-gray-400 mx-auto lg:max-w-none lg:row-start-1 lg:col-start-1">
                        <ul role="list">
                            {% for item in entry.requirements %}
                                <li>{{ typogrify(item.description) }}</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="mt-10 flex text-base max-w-prose mx-auto lg:max-w-none">
                        <div class="rounded-md shadow">
                            <a href="https://apply.phoenixvtc.com" target="_blank"
                               class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700">
                                Apply now
                            </a>
                        </div>

                        {% set howToApplyBlog = craft.entries()
                            .section('blog')
                            .title('How to apply')
                            .one() %}
                        {% if howToApplyBlog is not null %}
                            <div class="rounded-md shadow ml-4">
                                <a href="{{ howToApplyBlog.url }}"
                                   class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-orange-600 bg-white hover:bg-gray-50">
                                    How to apply
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="relative bg-gray-800 pt-16 overflow-hidden sm:pt-24 lg:pt-32">
        <div class="mx-auto max-w-md px-4 text-center sm:px-6 sm:max-w-3xl lg:px-8 lg:max-w-7xl">
            <div>
                <h2 class="text-base font-semibold tracking-wider text-orange-600 uppercase">
                    Custom Recruitment System
                </h2>
                <p class="mt-2 text-3xl font-extrabold text-white tracking-tight sm:text-4xl">
                    Because we're fancy like that.
                </p>
                <p class="mt-5 max-w-prose mx-auto text-xl text-gray-400">
                    Our recruitment system is fully custom-built, to make it as easy as possible for new drivers to
                    apply.
                </p>
            </div>
            <div class="mt-12 -mb-10 sm:-mb-24 lg:-mb-80">
                {% set applicationSystem = craft.imager.transformImage(alias('@assetBaseUrl/images/screenshots/base/application_system.png'), {
                    format: 'webp',
                    width: 1216,
                    height: 876,
                }) %}
                <img class="rounded-lg shadow-xl ring-1 ring-black ring-opacity-5"
                     width="1216" height="876"
                     src="{{ applicationSystem }}"
                     alt="Custom Phoenix Recruitment System">
            </div>
        </div>
    </div>

