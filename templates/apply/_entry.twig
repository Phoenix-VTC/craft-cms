    {% if entry.faqItems|length %}
        <div class="bg-gray-800">
            <div class="max-w-7xl mx-auto py-12 px-4 sm:py-16 sm:px-6 lg:px-8">
                <div class="max-w-3xl mx-auto divide-y-2 divide-gray-200">
                    <h2 class="text-center text-3xl font-extrabold text-white sm:text-4xl">
                        Frequently asked questions
                    </h2>
                    <dl class="mt-6 space-y-6 divide-y divide-gray-200">
                        {% for item in entry.faqItems %}
                            {% embed '_partials/faq/item.twig' with {'title': typogrify(item.question)} %}
                                {% block content %}
                                    {{ typogrify(item.answer) }}
                                {% endblock %}
                            {% endembed %}
                        {% endfor %}
                    </dl>
                </div>
            </div>
        </div>
