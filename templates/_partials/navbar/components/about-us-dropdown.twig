{% embed '_partials/flyouts/stacked-with-footer.twig' %}
    {% block content %}
        <a href="{{ url('about-us') }}"
           class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150">
            <!-- Heroicon name: outline/information-circle -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="flex-shrink-0 h-6 w-6 text-orange-600" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="ml-4">
                <p class="text-base font-medium text-gray-900">
                    About Us
                </p>
                <p class="mt-1 text-sm text-gray-500">
                    Find out more about Phoenix and the story behind us.
                </p>
            </div>
        </a>

        <a href="{{ url('team') }}"
           class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150">
            <!-- Heroicon name: outline/user-group -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="flex-shrink-0 h-6 w-6 text-orange-600" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <div class="ml-4">
                <p class="text-base font-medium text-gray-900">
                    Our Team
                </p>
                <p class="mt-1 text-sm text-gray-500">
                    Our team is at the heart of our community. Meet the faces behind Phoenix.
                </p>
            </div>
        </a>

        <a href="{{ url('about-us/drivershub') }}"
           class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150">
            <!-- Heroicon name: outline/desktop-computer -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="flex-shrink-0 h-6 w-6 text-orange-600" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <div class="ml-4">
                <p class="text-base font-medium text-gray-900">
                    Our DriversHub
                </p>
                <p class="mt-1 text-sm text-gray-500">
                    Let us welcome you to the world of virtual trucking. Meet the PhoenixBase.
                </p>
            </div>
        </a>

        <a href="{{ url('about-us/our-fleet') }}"
           class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150">
            <!-- Heroicon name: outline/truck -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="flex-shrink-0 h-6 w-6 text-orange-600" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
            </svg>
            <div class="ml-4">
                <p class="text-base font-medium text-gray-900">
                    The Phoenix Fleet
                </p>
                <p class="mt-1 text-sm text-gray-500">
                    Cras velit quis eros eget rhoncus lacus ultrices sed diam.
                </p>
            </div>
        </a>
    {% endblock %}

    {% block footer %}
        <div class="flow-root">
            <a href="https://events.phoenixvtc.com"
               class="-m-3 p-3 flex items-center rounded-md text-base font-medium text-gray-900 hover:bg-gray-100 transition ease-in-out duration-150">
                <!-- Heroicon name: outline/calendar -->
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="ml-3">Event Calendar</span>
            </a>
        </div>

        <div class="flow-root">
            <a href="{{ url('brand') }}"
               class="-m-3 p-3 flex items-center rounded-md text-base font-medium text-gray-900 hover:bg-gray-100 transition ease-in-out duration-150">
                <!-- Heroicon name: outline/pencil -->
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
                <span class="ml-3">Brand Guidelines</span>
            </a>
        </div>
    {% endblock %}
{% endembed %}