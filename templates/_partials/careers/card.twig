{% do eagerLoadElements(entry, [
    'featuredImage',
    'careerPosition',
    'careerInformation'
]) %}

{% set featuredImageOptions = {
    format: 'webp',
    mode: 'crop',
    width: 413,
    height: 192,
    quality: 90
} %}

<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
        {% set featuredImage = entry.featuredImage[0] ?? null %}
        <img class="h-48 w-full object-cover"
             width="413" height="192"
             src="{{ featuredImage.getUrl(featuredImageOptions) }}"
             alt="{{ entry.title }}">
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="flex-1">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                Now Recruiting!
            </span>
            <a href="{{ entry.url }}" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900">
                    {{ entry.title }}
                </p>
                <div class="mt-3 text-base text-gray-500">
                    {{ typogrify(entry.careerPosition[0]['about']) }}
                </div>
            </a>
        </div>
    </div>
</div>