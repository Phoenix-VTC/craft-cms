                                <div class="md:w-96 w-full p-5">
                                    <i class="fad fa-clipboard-list-check fa-10x"
                                       style="--fa-primary-color: white; --fa-secondary-color: #d03801; --fa-secondary-opacity: 1.0;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-start flex-row">
                        <div class="border-t-4 border-r-4 border-transparent">
                            <div class="w-16 ml-16 h-16 border-l-4 border-orange-600 border-dashed border-b-4 rounded-bl-full"></div>
                        </div>
                        <div class="border-t-4 border-transparent flex-auto">
                            <div class="h-16 border-b-4 border-orange-600 border-dashed"></div>
                        </div>
                        <div class="w-16 mt-16 mr-16 h-16 border-r-4 border-orange-600 border-dashed border-t-4 rounded-tr-full"></div>
                    </div>
                    <div class="flex flex-row-reverse">
                        <div class="hidden md:flex flex-col items-center">
                            <div class="w-32 py-5 border border-gray-800 rounded ml-4 uppercase flex flex-col items-center justify-center">
                                <div class="text-3xl font-black text-white">Step 4</div>
                            </div>
                        </div>
                        <div class="flex-auto border rounded  border-gray-800">
                            <div class="flex md:flex-row flex-col items-center">
                                <div class="md:w-96 w-full p-5">
                                    <i class="fad fa-envelope-open-text fa-10x"
                                       style="--fa-primary-color: white; --fa-secondary-color: #d03801; --fa-secondary-opacity: 1.0;"></i>
                                </div>
